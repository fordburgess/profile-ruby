<div class='project-self'
style='
background-image: linear-gradient(<%= project.color %>, <%= project.color %>), url(<%= project.background %>);
width: <%= project.width %>;
font-family: <%= project.font %>;
position: relative;
overflow: hidden;'>

  <div class='initial' style="display:flex; position: absolute; top: 0px; left: 0px; align-items: center; justify-content: center; width: 100%; height: 100%;">
    <div>
      <h1 style='color: <%= project.font_color %>;'><%= project.title %></h1>
      <h5 style='font-family: <%= project.font2 %>; color: <%= project.color2 %>;'><%= project.description %><h5>
    </div>
  </div>

  <div class='secondary' style="font-family: <%= project.font2 %>; color: <%= project.color2 %>; display:flex; flex-direction: column; position: absolute; top: 0px; left: 0px; align-items: center; justify-content: center; width: 100%; height: 100%;">
    <h3><%= project.description2 %></h3>
    <button class='view-button' style='font-family: <%= project.font2 %>; border: solid 3px <%= project.font_color %>'>View</button>
  </div>
</div>
