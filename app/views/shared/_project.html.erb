<div class='project-self'
style='
background-image: linear-gradient(<%= project.color %>, <%= project.color %>), url(<%= project.background %>);
width: <%= project.width %>;
font-family: <%= project.font %>;
position: relative;
overflow: hidden;'>

  <div class='initial' style="display:flex; position: absolute; top: 0px; left: 0px; align-items: center; justify-content: center; width: 100%; height: 100%;">
    <div>
      <h1 style='color: <%= project.font_color %>;'><%= project.title %></h1>
      <h6 style='font-family: <%= project.font2 %>; color: <%= project.color2 %>;'><%= project.description %><h6>
    </div>
  </div>

  <div class='secondary' style="display:flex; position: absolute; top: 0px; left: 0px; align-items: center; justify-content: center; width: 100%; height: 100%;">
    <h2>Hello</h2>
  </div>
</div>